<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import View.Components.*?>
<?import javafx.scene.layout.HBox?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           prefWidth="1024.0" prefHeight="786.0" stylesheets="@../Style.css" styleClass="bodyClass">
    <children>
        <HBox>
            <VBox alignment="BOTTOM_LEFT" styleClass="loginButtons" onMouseClicked="#closeApplication">
                <ButtonWithImage fx:id="closeBtn"/>
            </VBox>
        </HBox>

        <NumericKeyboard fx:id="keyboard" alignment="BOTTOM_RIGHT"/>
    </children>
</StackPane>
