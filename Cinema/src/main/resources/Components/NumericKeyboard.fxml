                prefHeight="90.0" prefWidth="90.0" styleClass="keyboardButton" text="1" GridPane.rowIndex="4"/>
        <Button fx:id="btn2" layoutX="102.0" layoutY="101.0" mnemonicParsing="false" onAction="#btn2_Click"
                prefHeight="90.0" prefWidth="90.0" styleClass="keyboardButton" text="2" GridPane.columnIndex="1"
                GridPane.rowIndex="4"/>
        <Button fx:id="btn3" layoutX="194.0" layoutY="101.0" mnemonicParsing="false" onAction="#btn3_Click"
                prefHeight="90.0" prefWidth="90.0" styleClass="keyboardButton" text="3" GridPane.columnIndex="2"
                GridPane.rowIndex="4"/>
        <Button fx:id="btnClear" layoutX="194.0" layoutY="192.0" mnemonicParsing="false" onAction="#btn0_Click"
                prefHeight="90.0" prefWidth="90.0" styleClass="keyboardButton" text="0" GridPane.columnIndex="1"
                GridPane.columnSpan="2" GridPane.rowIndex="5"/>
        <Button fx:id="btnCancel" layoutX="194.0" layoutY="284.0" mnemonicParsing="false" onAction="#btnCancel_Click"
                prefHeight="90.0" prefWidth="90.0" styleClass="keyboardButton" GridPane.rowIndex="5">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Images/cancel-button.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
